// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Ubuntu",
	"image": "mcr.microsoft.com/devcontainers/base:jammy",
	"features": {
		"ghcr.io/devcontainers/features/aws-cli:1": {},
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/git-lfs:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers/features/powershell:1": {},
		"ghcr.io/devcontainers/features/python:1": {},
		"ghcr.io/devcontainers/features/sshd:1": {},
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers-contrib/features/ansible:2": {},
		"ghcr.io/devcontainers-contrib/features/flake8:1": {},
		"ghcr.io/devcontainers-contrib/features/pylint:2": {},
		"ghcr.io/devcontainers-contrib/features/mypy:2": {},
		"ghcr.io/devcontainers-contrib/features/yamllint:2": {},
		"ghcr.io/devcontainers-contrib/features/pre-commit:2": {},
		"ghcr.io/devcontainers-contrib/features/pipx-package:1": {},
		"ghcr.io/devcontainers-contrib/features/pipenv:2": {},
		"ghcr.io/devcontainers-contrib/features/flake8:2": {},
		"ghcr.io/devcontainers-contrib/features/elasticsearch-asdf:2": {},
		"ghcr.io/akhildevelops/devcontainer-features/pip:0": {},
		"ghcr.io/oleksis/devcontainer-features/python-launcher:1": {},
		"ghcr.io/dhoeric/features/act:1": {}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
		"postCreateCommand": "./.devcontainer/postCreateCommand.sh",
		"customizations": {
			"vscode": {
				"extensions": [
					"ms-vscode.remote-server",
					"cschleiden.vscode-github-actions",
					"circleci.circleci",
					"GitHub.copilot"
				]
			}
		},
		"portsAttributes": {
			"5601": {
				"label": "Kibana"
			},
			"8220": {
				"label": "Fleet Server"
			},
			"9200": {
				"label": "Elasticsearch"
			},
			"9443": {
				"label": "Portrainer",
				"protocol": "https"
			}
		}

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
